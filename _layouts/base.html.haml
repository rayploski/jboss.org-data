!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title Develop the JBoss Way 
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    %meta(name="description"){:content=>page.description ? page.description : site.description}
    - if site.keywords
      %meta(name="keywords"){:content=>site.keywords}
    - if page.author
      %meta(name="author"){:content=>site.identities.lookup(page.author).name}
    - if site.url
      %link(rel="canonical"){:href=>site.url}
    %meta{ :name=>"robots", :content=>"all"}
    %link{ :rel=>"stylesheet", :type=>"text/css", :href=>"http://static.jboss.org/theme/css/common/styles.css", :media=>"screen, projection"}
    %link{ :rel=>"stylesheet", :type=>"text/css", :href=>"http://static.jboss.org/theme/css/magnolia/project.css", :media=>"screen, projection"}
    %link{ :rel=>"stylesheet", :type=>"text/css", :href=>"http://static.jboss.org/theme/css/magnolia/clearspace_common.css", :media=>"screen, projection"}
    %link{ :rel=>"stylesheet", :type=>"text/css", :href=>"http://static.jboss.org/theme/css/magnolia/wide.css", :media=>"only screen and (min-width: 1200px)"}
    %link{ :rel=>"stylesheet", :type=>"text/css", :href=>"http://static.jboss.org/theme/css/magnolia/small.css", :media=>"only screen and (max-width: 980px)"}
    %link{ :rel=>"stylesheet", :type=>"text/css", :href=>"http://static.jboss.org/theme/css/magnolia/print.css", :media=>"print"}
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{site.base_url}/stylesheets/styles.css" }
    %link{ :rel=>"stylesheet", :type=>"text/css", :href=>"http://static.jboss.org/theme/css/common/org_common.css", :media=>"screen, projection"}
    %link{ :rel=>"stylesheet", :type=>"text/css", :href=>"#{site.base_url}/stylesheets/data.css", :media=>"screen"}
    

    %script{ :src=>"http://static.jboss.org/theme/js/magnolia/allinone.js", :type=>"text/javascript"}
    %script{ :src=>"http://w.sharethis.com/button/buttons.js", :type=>"text/javascript"}
    %script{ :src=>"http://static.jboss.org/theme/js/tabzilla.js", :type=>"text/javascript"}   
    %script{ :src=>"#{site.base_url}/js/jquery-1.7.2.min.js", :type=>"text/javascript"}   
    %script{ :src=>"#{site.base_url}/js/jquery.effects.core.js", :type=>"text/javascript"}   
    %script{ :src=>"#{site.base_url}/js/redhatdata.js", :type=>"text/javascript"}   
    
    
    
    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'//html5shim.googlecode.com/svn/trunk/html5.js' }      
