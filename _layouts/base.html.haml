               dropShadows: false                            // disable drop shadows
           });         setupPrimaryMenuItemActive();     }); 
  %body{:id=>"community", :class=>"col-float3 nocol-layout"}
    #wrapper
      #maincontent-wrapper
        = remotePartial("http://static.jboss.org/theme/includes/org_header_topNav.html")    
        #top_subnav_branding
          .community-banner
            %a(data-bitly-type="bitly_hover_card"){:href=>"#{site.base_url}/developer"}
              %img{:src=>"http://jboss.org/dms/jbossway/jbosswaybanner_1180px.png"}
        #wrapper-2
          #wrap-content 
            ~ content
          = partial ("_project-footer.html.haml")
      #site-info
        = remotePartial('http://static.jboss.org/theme/includes/org_footer2.html')
    %script{ :type=>'text/javascript', :src=>'//cdnjs.cloudflare.com/ajax/libs/jquery/1.7.1/jquery.min.js' }
